model User {
    userId    String    @id @default(uuid())
    firstName String
    lastName  String
    username  String    @unique
    email     String    @unique
    password  String
    avatarUrl String?
    bio       String?
    chats     UserChat[] 
    messages  Message[]  @relation("UserSentMessages")
    createdAt DateTime   @default(now())
    updatedAt DateTime   @updatedAt

    @@index([username])
}